{
  "name": "@tanstack/pacer-lite",
  "version": "0.2.1",
  "description": "Lightweight utilities for debouncing, throttling, and more - designed for npm packages.",
  "author": "Tanner Linsley",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TanStack/pacer.git",
    "directory": "packages/pacer-lite"
  },
  "homepage": "https://tanstack.com/pacer",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/tannerlinsley"
  },
  "keywords": [
    "debounce",
    "throttle",
    "rate-limit",
    "pacer",
    "lightweight",
    "minimal"
  ],
  "scripts": {
    "clean": "premove ./build ./dist",
    "lint:fix": "eslint ./src --fix",
    "test:eslint": "eslint ./src",
    "test:lib": "vitest",
    "test:lib:dev": "pnpm test:lib --watch",
    "test:types": "tsc",
    "build": "tsdown"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./lite-batcher": {
      "import": "./dist/lite-batcher.js",
      "require": "./dist/lite-batcher.cjs"
    },
    "./lite-debouncer": {
      "import": "./dist/lite-debouncer.js",
      "require": "./dist/lite-debouncer.cjs"
    },
    "./lite-queuer": {
      "import": "./dist/lite-queuer.js",
      "require": "./dist/lite-queuer.cjs"
    },
    "./lite-rate-limiter": {
      "import": "./dist/lite-rate-limiter.js",
      "require": "./dist/lite-rate-limiter.cjs"
    },
    "./lite-throttler": {
      "import": "./dist/lite-throttler.js",
      "require": "./dist/lite-throttler.cjs"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist/",
    "src"
  ],
  "devDependencies": {
    "@tanstack/pacer": "workspace:*"
  }
}
